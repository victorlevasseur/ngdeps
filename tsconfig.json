{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "bin"
  },
  "include": [
    "src/**/*", "tests/build-tree.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}